{
  "name": "@bizarre/ui",
  "version": "1.0.2",
  "description": "Headless component library for the weird parts of UI.",
  "private": false,
  "main": "./dist/bizarre-ui.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/bizarre-ui.es.js",
      "require": "./dist/bizarre-ui.cjs.js"
    },
    "./timeslice": {
      "import": "./dist/timeslice/index.es.js",
      "types": "./dist/timeslice/index.d.ts",
      "require": "./dist/timeslice/index.cjs.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "components",
    "headless",
    "ui",
    "radix",
    "vite",
    "bizarre"
  ],
  "homepage": "https://ui.bizar.re",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bizarre/ui.git"
  },
  "bugs": {
    "url": "https://github.com/bizarre/ui/issues"
  },
  "license": "MIT",
  "scripts": {
    "build": "vite build --config vite.lib.config.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "typecheck": "tsc --emitDeclarationOnly",
    "lint": "eslint ./src --ext .ts,.tsx",
    "prepare": "husky && bun run build",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@formatjs/intl-datetimeformat": "^6.18.0",
    "@radix-ui/react-compose-refs": "^1.1.2",
    "@radix-ui/react-context": "^1.1.2",
    "@radix-ui/react-dismissable-layer": "^1.1.9",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-use-controllable-state": "^1.2.2",
    "chrono-node": "^2.8.0",
    "date-fns": "^4.1.0",
    "timezone-enum": "^1.0.4"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.2",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/builder-vite": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@tailwindcss/postcss": "^4.1.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@vitest/ui": "^3.1.3",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "rollup-plugin-dts": "^6.1.0",
    "semantic-release": "^24.2.3",
    "storybook": "^8.6.12",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.3.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.3",
    "vitest": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "bunx eslint --fix --no-warn-ignored",
      "bunx prettier --write"
    ]
  }
}
